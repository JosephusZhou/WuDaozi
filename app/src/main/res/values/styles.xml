<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom WuDaozi theme -->
    <style name="CustomWuDaoziTheme" parent="WuDaozi.Theme">
        <item name="toolbar_theme">@style/CustomToolbarTheme</item>
    </style>

    <style name="CustomToolbarTheme" parent="WuDaozi.Toolbar">
        <item name="colorControlNormal">#FFFF00</item>
    </style>

</resources>
